<?xml version="1.0"?>
<config>
    <modules>
        <Zing_Contactus>
            <version>1.0.0</version>
        </Zing_Contactus>
    </modules>

    <frontend>
        <routers>
            <zing_contactus>
                <use>standard</use>
                <args>
                    <module>Zing_Contactus</module>
                    <frontName>customcontact</frontName>
                </args>
            </zing_contactus>
        </routers>

        <layout>
            <updates>
                <zing_contactus>
                    <file>zing/contactus.xml</file>
                </zing_contactus>
            </updates>
        </layout>
    </frontend>

    <global>
        <blocks>
            <zing_contactus>
                <class>Zing_Contactus_Block</class>
            </zing_contactus>
        </blocks>

        <helpers>
            <zing_contactus>
                <class>Zing_Contactus_Helper</class>
            </zing_contactus>
        </helpers>

        <models>
            <zing_contactus>
                <class>Zing_Contactus_Model</class>
            </zing_contactus>
        </models>
        <template>
            <email>
                <zing_custom_email_template1 module="zing_contactus">
                    <label>Zing custom email module</label>
                    <file>zing_custom_email1.html</file>
                    <type>html</type>
                </zing_custom_email_template1>
            </email>
        </template>
    </global>
</config>